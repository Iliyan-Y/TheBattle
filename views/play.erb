<%if @game.turn_to_attack.hp == 0 %>
  <p><%=@game.turn_to_attack.name%> is looser</p>
  <form action='/'>
  <button type=submit >OK</button> 
  </form>
<%else%>
  <p><%= @game.player1.name %> vs <%= @game.player2.name %></p>
  <p> <%= @game.player1.name %> HP:<%=@game.player1.hp%> </p>
  <p> <%= @game.player2.name %> HP:<%=@game.player2.hp%> </p>
  <p><%=@game.turn_to_attack.name%> turn:</p>
  <form action='/attack'>
  <button type=submit >Attack</button> 
  </form>
<%end%>
